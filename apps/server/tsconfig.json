{
  "compilerOptions": {
    // typechecks
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,

    // module system
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    // build
    "composite": true,
    "target": "es2022",
    "skipLibCheck": true,

    // paths
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
